package java0914;

import java.util.Scanner;

class MemberInfo2 {
	private String name, name2;
	private int age;
	private String email;
	private String addr;

	public MemberInfo2(String name, int age, String email, String addr) {
		this.name = name;
		this.age = age;
		this.email = email;
		this.addr = addr;
		this.name2 = name;
	}

	public void print() {
		System.out.println(
				"이름은" + this.name + "이고, 나이는 " + this.age + "이고, 메일은 " + this.email + "이며, 주소는 " + this.addr + "입니다");
	}
}

public class MemberInput2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		while (true) {
			try {
				System.out.println("이름을 입력하세요");
				String name = scan.nextLine();
				if (name.equals("") || name.equals(null)) {
					System.err.println("이름을 공백없이 다시 입력해주세요");
					name = scan.nextLine();
				}
				System.out.println("나이를 입력하세요");
				int age = scan.nextInt();
				scan.nextLine();
				System.out.println("e-mail을 입력하세요");
				String email = scan.nextLine();
				if (email.equals("") || email.equals(null)) {
					System.err.println("e-mail을 공백없이 다시 입력해주세요");
					email = scan.nextLine();
				}
				System.out.println("주소를 입력하세요");
				String addr = scan.nextLine();
				if (addr.equals("") || addr.equals(null)) {
					System.err.println("주소를 공백없이 다시 입력해주세요");
					addr = scan.nextLine();
				}
				MemberInfo member = new MemberInfo(name, age, email, addr);
				member.print();
			} catch (Exception e) {
				e.printStackTrace();
			}
		}

	}

}
