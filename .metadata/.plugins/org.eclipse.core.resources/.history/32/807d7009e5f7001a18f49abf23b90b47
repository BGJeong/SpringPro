package java0916;

import java.text.DecimalFormat;

public class Exam2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int r = 5;
		DecimalFormat df = new DecimalFormat("0.###");
				
		double a = Math.PI;
		
		double b = 2*a*r;
		System.out.println(df.format(b));
	}

}
